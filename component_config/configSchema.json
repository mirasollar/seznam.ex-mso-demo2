{
  "type": "object",
  "title": "Authentication",
  "required": [
    "#private_app_token"
  ],
  "properties": {
    "#private_app_token": {
      "type": "string",
      "title": "Private App Token",
      "format": "password",
      "propertyOrder": 100
    }
  },
  "type": "object",
  "title": "Configuration",
  "required": [
    "incremental_output",
    "deals_cnt"
  ],
  "properties": {
    "incremental_output": {
    "type": "number",
    "enum": [
      0,
      1
    ],
      "options": {
        "enum_titles": [
          "Full Load",
          "Incremental Update"
        ]
      },
    "default": 1,
    "title": "Load type",
    "description": "If set to Incremental update, the result tables will be updated based on primary key. Full load overwrites the destination table each time.",
    "propertyOrder": 200
    },
     "deals_cnt": {
    "type": "number",
    "title": "Number of Deals",
    "propertyOrder": 300
    }
  }    
}
